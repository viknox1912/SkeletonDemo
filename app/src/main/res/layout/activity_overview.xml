<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.viknox.skeletondemo.Overview">
    <FrameLayout
        android:id="@+id/frg_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout2"></FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#00BBFF"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/relativeLayout2">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchBtn"
            android:src="@drawable/ic_sog"
            android:layout_toStartOf="@+id/settingsBtn"
            android:layout_alignTop="@+id/settingsBtn" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/groupsBtn"
            android:src="@drawable/ic_groups"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsBtn"
            android:src="@drawable/ic_settings"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/groupsBtn"
            android:layout_toStartOf="@+id/chatBtn" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatBtn"
            android:src="@drawable/ic_chat"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/groupsBtn"
            android:layout_alignTop="@+id/groupsBtn" />
    </RelativeLayout>


</RelativeLayout>
